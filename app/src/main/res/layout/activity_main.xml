<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/drawer_layout">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:theme="@style/AppTheme.ActionBar.Transparent"
            app:menu="@menu/toolbar_items"
            app:titleTextColor="@color/cardview_light_background"
            />

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <androidx.camera.view.PreviewView
                    android:id="@+id/preview_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                </androidx.camera.view.PreviewView>

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:flexDirection="row"
                        app:justifyContent="space_evenly">

                        <Button
                            android:id="@+id/ShortText"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:drawableTop="@drawable/baseline_subject_black_48"
                            android:text="Short Text"
                            app:layout_minWidth="120dp" />

                        <Button
                            android:id="@+id/BarCode"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:drawableTop="@drawable/baseline_barcode_80"
                            android:text="Bar Code"
                            app:layout_minWidth="120dp" />

                        <Button
                            android:id="@+id/Person"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:drawableTop="@drawable/baseline_account_circle_black_48"
                            android:text="Person"
                            app:layout_minWidth="120dp" />

                        <Button
                            android:id="@+id/Currency"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:drawableTop="@drawable/round_monetization_on_black_48dp"
                            android:paddingTop="25dp"
                            android:text="Currency"
                            app:layout_minWidth="120dp" />

                        <Button
                            android:id="@+id/Color"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:drawableTop="@drawable/baseline_opacity_black_48"
                            android:text="Color"
                            app:layout_minWidth="120dp" />
                    </com.google.android.flexbox.FlexboxLayout>
                </HorizontalScrollView>
            </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:menu="@menu/navigation_items" />
</androidx.drawerlayout.widget.DrawerLayout>

